<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Garis tepi (Stroke) -->
    <stroke
        android:width="1dp"
        android:color="@color/brightRed"
    />

    <!-- Warna latar belakang transparan -->
    <solid android:color="@android:color/transparent" />

    <!-- Padding agar garis tepi tidak terlalu dekat dengan teks -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>
